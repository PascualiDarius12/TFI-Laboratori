    img(class="img-fluid adaptarimg" src="images/fondoLogin.png" alt="" id="imagen")
    div(class=" position-absolute text-white p-5 h-100 w-100 d-flex align-items-center")
        form(action="" class="rounded d-flex flex-column align-items-center justify-content-center bg-white p-5 mx-5 text-white shadow-sm" id="" name="" onsubmit="")
