                                        td 
                                            div(class="w-100 text-center")
                                                a(href="" id='' class="btnDeleteExam")
                                                    i(class="fa-solid fa-trash px-1 text-danger agrandar")
    .row.border.my-4.rounded.bg-white.shadow-sm.d-none(id="contenido-sample")
