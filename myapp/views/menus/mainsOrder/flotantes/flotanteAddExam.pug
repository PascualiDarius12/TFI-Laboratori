div(class="position-relative p-5 w-100 bg-white shadow-sm rounded")
    div(class="position-absolute top-0 end-0 m-2") 
        i(class="fa-solid fa-circle-xmark text-danger agrandar" id="btnCerrarFlot")
    legend(class="letraChida h4") New Exam:
    p(class="letraChida h6 text-secondary") Select a Exam
    .d-flex.flex-row.bg-color.rounded-top.text-white.w-100.align-items-center
           p(class="letraChida h5 p-3") Examss:
           .position-relative.mx-1
                input(class="inputSearch rounded-pill h6 p-2" placeholder="Dni" id="dniExamSearch" name="dniExamSearch" type="text")
                .d-flex.align-items-center.position-absolute.end-0.top-50.px-2
                    i(class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(255, 255, 255, 0.648);" id="btnExamPatient")
           .d-flex.justify-content-center.p-3.w-100.align-items-end.flex-column
                i(class="fa-solid fa-plus text-white agrandar h4" id="") 
    div(class="table-responsive mt-4" id="tabla-exams")
                    table(class="table  table-hover h6 mt-3 rounded")
                        thead(class="")
                                th(scope="col") ID
                                th(scope="col") Name
                                th(scope="col") Abbreviation
                                th(scope="col") Detail
                                th(scope="col") Add
                        tbody
                            each exam in exams
                                    tr(class= exam.active ? '' : 'table-danger')
                                        th(scope="row")  #{exam.id}
                                        td #{exam.name}
                                        td #{exam.abbreviation}
                                        td #{exam.detail}
                                        td
                                            div(class="w-100 text-center")
                                                a(href="" id=exam.id class="btnRegExam")
                                                    i(class="fa-solid fa-plus px-1 text-success agrandar")